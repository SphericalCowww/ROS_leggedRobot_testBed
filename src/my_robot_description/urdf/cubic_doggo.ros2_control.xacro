            <joint name="servo1_servo1_padding_BR">
                <command_interface name="position"/>
                <command_interface name="velocity"/>
                <command_interface name="effort"/>
                <state_interface name="position">
                  <param name="initial_value">${initial_positions['servo1_servo1_padding_BR']}</param>
                </state_interface>
                <state_interface name="velocity"/>
                <state_interface name="effort"/>
            </joint>
            <joint name="servo2_servo2_padding_BR">
                <command_interface name="position"/>
                <command_interface name="velocity"/>
                <command_interface name="effort"/>
                <state_interface name="position">
                  <param name="initial_value">${initial_positions['servo2_servo2_padding_BR']}</param>
                </state_interface>
                <state_interface name="velocity"/>
